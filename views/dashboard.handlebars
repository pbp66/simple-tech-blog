<style>
	h5, h6 { margin: 5px; padding: 5px; display: flex; align-items: center; } h5
	{ text-align: left; font-size: x-large; justify-content: flex-start; } h6
	{text-align: right; font-size: small; justify-content: flex-end;}
	.card-title { border-radius: 10px; }
</style>
<div class="create-post-button">
	<p>
		<button
			class="btn btn-outline-primary"
			type="button"
			data-bs-toggle="collapse"
			data-bs-target="#new-post-collapse"
			aria-expanded="false"
			aria-controls="#new-post-collapse"
		>
			Create Post
		</button>
	</p>
	<div class="collapse" id="new-post-collapse">
		<div class="create-post card m-1 border-primary">
			<div class="text-primary fs-4 text-center py-1 m-0">
				New Post
			</div>
			<form>
				<div class="m-0">
					<label for="post-title" class="form-label card-header width-100 border-0 rounded-top p-2 m-0 fs-5">Title</label>
					<input
						type="text"
						class="form-control border-0 rounded-0 border-top border-bottom px-2 py-1 m-0 fs-6"
						id="post-title"
						aria-describedby="post-title-help"
					/>
					<div id="post-title-help" class="form-text px-2 py-1 m-0">Label your blog
						post with a creative title!</div>
				</div>
				<div class="m-0">
					<label for="post-body" class="form-label card-header width-100 border-bottom-0 p-2 m-0 fs-5">Content</label>
					<textarea data-expandable
						class="form-control rounded-0"
						name="post-body"
						id="post-body"
					></textarea>
				</div>
				<div class="card-footer m-0 p-2 border-top-0">
					<button type="submit" class="btn btn-primary card-footer-button">
						Submit
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
{{#if count}}
	<div class="container-fluid">
		<div class="post-group-header text-primary text-center p-1 m-0">
			Posts
		</div>
		{{#each posts as |post|}}
			{{> post this}}
		{{/each}}
	</div>
	<div class="container-fluid mt-2">
		<div class="post-group-header text-primary text-center p-1 m-0">
			Comments
		</div>
		{{#each comments as |comment|}}
			<div
				class="comment btn btn-outline-primary card-transform"
				id="comment-{{comment.id}}"
				role="button"
			>
				<div class="card m-0 p-0 border-0">
					<div class="comment-header card-header p-0 m-0">
						<h6
							class="font-weight-light text-muted py-1 my-0"
						>
							Commented By
							{{comment.user.name}}
							on
							{{comment.updatedAt}}
						</h6></div>
					<div class="card-body px-1 py-0 m-1">
						<div class="comment-text">
							<p class="card-text text-dark px-2 py-0 text-start">
								{{comment.content}}
							</p>

						</div>
					</div>
					<div class="card-footer m-0 p-2">
						<a
							href="/post/{{comment.post_id}}"
							class="card-link btn btn-primary font-weight-light"
						>
							View comment on "{{comment.post.title}}"
						</a>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
{{else}}
	<div class="alert alert-primary alert-dismissible fade show" role="alert">
		You have not made any posts or comments. Create a post or comment on a
		post and see your community contributions here!
		<button
			type="button"
			class="btn-close"
			data-bs-dismiss="alert"
			aria-label="Close"
		></button>
	</div>
{{/if}}