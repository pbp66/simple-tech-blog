<style>
	h5, h6 { margin: 5px; padding: 5px; display: flex; align-items: center; } h5
	{ text-align: left; font-size: x-large; justify-content: flex-start; } h6
	{text-align: right; font-size: small; justify-content: flex-end;}
	.card-title { border-radius: 10px; }
</style>
<div>

</div>
{{#if count}}
<div class="container-fluid">
	{{#each posts as |post| }}
		{{> post this}}
	{{/each}}
</div>
<div class="container-fluid">
	{{#each comments as |comment|}}
		<div class="card comment">
			<div class="card-body">
				<div class="row card-title">
					<h6
						class="comment-user comment-time col font-weight-light text-dark"
					>
						Commented By {{comment.user.name}} on {{comment.updatedAt}}
					</h6>
				</div>
				<div class="comment-text">
					<p class="card-text">
						{{comment.content}}
					</p>
					<a href="/api/posts/{{comment.post_id}}" class="card-link btn btn-warning font-weight-light">
						View comment on "{{comment.post.title}}"
					</a>
				</div>
			</div>
		</div>
	{{/each}}
</div>
{{else}}
	<div class="alert alert-primary alert-dismissible fade show" role="alert">
		You have not made any posts or comments. Create a post or comment on a post and see your community contributions here!
		<button
			type="button"
			class="btn-close"
			data-bs-dismiss="alert"
			aria-label="Close"
		></button>
	</div>
{{/if}}