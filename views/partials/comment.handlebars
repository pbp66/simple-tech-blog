<p class="col p-0 m-0">
	<button
		class="btn btn-info"
		type="button"
		data-bs-toggle="collapse"
		data-bs-target="#comment-collapse-{{this.id}}"
		aria-expanded="false"
		aria-controls="comment-collapse-{{this.id}}"
	>
		View Comments
	</button>
</p>
<p class="col p-0 m-0">
	<button
		class="btn btn-outline-primary"
		type="button"
		data-bs-toggle="collapse"
		data-bs-target="#create-comment-{{this.id}}"
		aria-expanded="false"
		aria-controls="create-comment-{{this.id}}"
	>
		Create Comment
	</button>
</p>
<div class="collapse m-1 p-2" id="comment-collapse-{{this.id}}">
	<div class="comments card">
		<ul class="comment-list list-group list-group-flush card-body">
			{{#each this.comments as |comment|}}
				<li class="list-group-item comment card-text">
					{{comment.content}}</li>
			{{/each}}
		</ul>
	</div>
</div>
<div class="collapse m-1 p-2" id="create-comment-{{this.id}}">
	<form>
		<div class="mb-3">
			<label for="new-comment" class="form-label">Comment</label>
			<textarea
				class="form-control"
				name="new-comment"
				id="new-comment"
			></textarea>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>